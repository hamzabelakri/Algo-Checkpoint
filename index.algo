ALGORITHM Checkpoint
VAR
   numWords: INTEGER
   numVowels: INTEGER
   numCharac: INTEGER
   numSpaces: INTEGER
   c: CHAR

BEGIN

numVowels:= 0
numWords:= 0
numSpaces:= 0
numCharac:= 0
while (c!==".") Do
Read (c)

IF (c==" ") THEN
   numSpaces= numSpaces+1

   
END_IF

   numWords:= numSpaces+1
   numCharac:= numCharac+1

IF (c== vowels) THEN
   numVowels:= numVowels+1

END_IF

END While

END

